{% block stylesheets %}
    <style>
        form {
            width: 300px;
            margin: 0 auto;
            margin-top: 300px;
        }
        form button {
            background-color: #4CAF50;
            border: none;
            color: white;
            padding: 15px 32px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            cursor: pointer;
            margin-top: 20px;
        }
    </style>
{% endblock %}

{{ form_start(form) }}
    {{ form_widget(form) }}
    <button type="submit">Submit</button>
{{ form_end(form) }}